<% cache("organization_entry_#{entry.id}") do %>
  <div style="clear: both; margin-bottom: 1.5em;">
  	<div style="float: left; width: 12%;">
  	</div>
  	<div style="float: right; width: 88%;">
  		<div class='entry_title'>
  			<% if entry.url %>
  				<%= link_to entry.title, entry.url.address %>
  			<% else %>
  				<%= raw entry.title %>
  			<% end %>
  		</div>
  		<div class='entry_location'><%= raw entry.location.full_address_one_line %></div>
  		<div style="margin-left: 1em;">
  			<% if !entry.organization.description.blank? %>
  				<div class='entry_description'>
  					<%= raw RedCloth.new(entry.organization.description.strip, [:filter_html]).to_html %>
  				</div>
  			<% end %>
  			<div class='entry_contact'><span style="color: #555;">CONTACT:</span> <%= raw format_contact_info(entry) %></div>
  			<div class='entry_updated'>
  				<%= link_to 'Permalink', :action => 'show', :controller => 'organizations', :id => entry.id %>
  				&mdash;
  				Updated:
  				<%= entry.updated_at.strftime('%b %d %Y') %>
  			</div>
  		</div>
  	</div>
  </div>
  <div style="clear: both; padding-top: 1.8em;"></div>
<% end %>
